<?xml version="1.0" encoding="windows-1252"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


    <context:component-scan base-package="com.training.camel"/>

    <bean id="quartz" class="org.apache.camel.component.quartz.QuartzComponent">
        <property name="startDelayedSeconds" value="1000000"/>
        <!-- <property name="autoStartScheduler" value="true"/>-->
    </bean>

    <camel:camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <camel:package>com.training.camel</camel:package>
        <!-- refer to a given route to be used -->
        <camel:template id="camelTemplate"/>
        <route group="groupName" delayer="">
            <from uri="bean:eventRepository?method=getLastEvent"/>
            <to uri="bean:eventProcessor?method=process"/>
        </route>
        <route>
            <from uri="quartz://groupName/timerName?cron=1 * * * * ?"/>
            <to uri="bean:eventRepository?method=getLastEvent"/>
        </route>
    </camel:camelContext>


</beans>